<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.javafx.DodajMjernuPostajuController">
	<top>
      <Label text="Unesite podatke za novu mjernu postaju:" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Naziv:" />
            <Label text="Vrsta:" GridPane.rowIndex="1" />
            <Label text="Mjesto:" GridPane.rowIndex="2" />
            <TextField fx:id="nazivTextField" GridPane.columnIndex="1" />
            <ComboBox fx:id="mjestoCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="vrstaTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="xTextField" />
            <TextField fx:id="yTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Koordinata X:" GridPane.rowIndex="3" />
            <Label text="Koordinata Y:" GridPane.rowIndex="4" />
         </children>
      </GridPane>
   </center>
   <bottom>
      <Button fx:id="spremiButton" mnemonicParsing="false" onAction="#spremiPodatke" text="Spremi" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
